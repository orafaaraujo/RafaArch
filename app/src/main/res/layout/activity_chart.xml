<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".presentation.ui.chart.ChartActivity">

    <TextView
        android:id="@+id/activity_chart_engine_temperature_symbol"
        style="@style/chart_item_symbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/chart_engine_temperature_symbol"/>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/activity_chart_engine_temperature_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_chart_engine_temperature_symbol"/>

</RelativeLayout>
